<meta http-equiv="content-type" content="text/html; charset=utf-8" />

<html>
	<title>PINGER</title>
	<head>
		<link rel="stylesheet" href="resources/pingerStyle.css"/>
		<script  src="lib/jQuery/jquery-1.6.2.min.js"></script>
		<script  src="lib/jQueryUI/jquery-ui-1.8.16.custom.min.js"></script>
		<script  src="lib/knockout/knockout-1.3.js"></script>
		<script  src="js/PingListener.js"></script>
		<script  src="js/Pinger.js"></script>
		<script  src="js/PingerViewModel.js"></script>

	</head>
	<body >
		<div class="header">
			<h3 align="center">Pinger Application </h3>
		</div>
		<center>
			<br>
			<br>
			<div class="pingerDiv" data-bind="visible:showButton">
					<br>
					<div>
						<button id="ping" data-bind="click: press">Ping Me</button>
					</div>
	
					<div data-bind= "style: {color: setColor() < 0 ? 'red' :'green'}">
						<label id="resptime" data-bind="text: responseTime"></label>
						<br>
						<label id="proctime" data-bind="text: processingTime"></label>
						<br>
						<label id="stat" data-bind="text: message"></label>
					</div>
						
			</div>
		</center>
		
		
		<br><br>
		<div align="center" data-bind="visible:showSpinner">
		<img src="resources/spinner1.gif"/> 
		</div>
		
		<script>
			var oConfig = {
				timeout : 5000,
				url : "RequestServlet"
			};
			var pinger = new Pinger();
			var pingerViewModel = new PingerViewModel(pinger, oConfig);
			ko.applyBindings(pingerViewModel);
		</script>
	
	</body>
</html>